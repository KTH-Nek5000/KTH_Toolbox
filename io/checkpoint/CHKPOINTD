!> @file CHKPOINTD
!! @ingroup chkpoint
!! @brief Include file for checkpoint module
!! @author Adam Peplinski
!! @date Mar 7, 2016
!=======================================================================
!     module id and name
      integer chpt_id
      character*(*) chpt_name
      parameter(chpt_name='CHKPOINT')

!     initialisation flag
      logical chpt_ifinit

!     runtime parameter section
!     Do we restart form the checkpoint + parameter id
      logical chpt_ifrst
      integer chpt_ifrst_id

!     restart file number + parameter id
      integer chpt_fnum, chpt_fnum_id

!     checkpoint frequency + parameter id
      integer chpt_step, chpt_step_id

!     simulation wall time + parameter id
      real chpt_wtime
      character*20 chpt_wtimes
      integer chpt_wtime_id

!     common blocks
      common /CHKPNTI/ chpt_id, chpt_ifrst_id, chpt_fnum, 
     $  chpt_fnum_id, chpt_step, chpt_step_id, chpt_wtime_id

      common /CHKPNTR/ chpt_wtime

      common /CHKPNTL/ chpt_ifinit, chpt_ifrst
      
      common /CHKPNTC/ chpt_wtimes